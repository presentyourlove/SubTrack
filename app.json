{
  "expo": {
    "name": "SubTrack",
    "slug": "subtrack",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "scheme": "subtrack",
    "splash": {
      "image": "./assets/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#1a1a1a"
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.subtrack.app",
      "infoPlist": {
        "NSFaceIDUsageDescription": "SubTrack 需要生物辨識權限以保護您的財務資料。"
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#1a1a1a"
      },
      "edgeToEdgeEnabled": true,
      "predictiveBackGestureEnabled": false,
      "package": "com.subtrack.app"
    },
    "web": {
      "favicon": "./assets/icon.png",
      "bundler": "metro",
      "output": "single"
    },
    "plugins": ["expo-router", "expo-localization", "expo-quick-actions"],
    "extra": {
      "expoQuickActions": {
        "androidIcons": {
          "shortcut_add": {
            "foregroundImage": "./assets/adaptive-icon.png"
          },
          "shortcut_search": {
            "foregroundImage": "./assets/adaptive-icon.png"
          },
          "shortcut_summary": {
            "foregroundImage": "./assets/adaptive-icon.png"
          }
        },
        "iosIcons": {
          "shortcut_add": "add",
          "shortcut_search": "search",
          "shortcut_summary": "chart.bar"
        }
      }
    },
    "jsEngine": "hermes",
    "experiments": {
      "typedRoutes": true
    }
  }
}
